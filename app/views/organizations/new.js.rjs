page.call "crm.flick", :empty, :toggle
page.call "crm.hide_form", :options if called_from_index_page?
page.call "crm.flip_form", :create_organization

unless params[:cancel].true?
  page[:create_organization].replace_html :partial => "create"
  page.call "crm.set_title", :create_organization, t(:create_organization)
else
  page.call "crm.set_title", :create_organization, t(:organizations)
end

