<% form_for([@addressable, @street_address]) do |f| %>
  <%= f.error_messages %>
  <p><%= f.label :purpose %><br /><%= f.text_field :purpose %></p>
  <p><%= f.label :street_address %><br /><%= f.text_field :street_address %></p>
  <p><%= f.label :unit_number %><br /><%= f.text_field :unit_number %></p>
  <p><%= f.label :city %><br /><%= f.text_field :city %></p>
  <p><%= f.label :state %><br /><%= f.text_field :state %></p>
  <p><%= f.label :postal_code %><br /><%= f.text_field :postal_code %></p>
  <p><%= f.label :country_code %><br /><%= f.text_field :country_code %></p>
  <p><%= f.submit 'Update' %></p>
<% end %>