<% form_for([@emailable, @email_address]) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email_address %><br />
    <%= f.text_field :email_address %>
  </p>
  <p>
    <%= f.label :purpose %><br />
    <%= f.text_field :purpose %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>