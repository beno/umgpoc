<% form_for([@telephonic, @telephone]) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :country_code %><br />
    <%= f.select :country_code, TELEPHONE_COUNTRY_CODES.sort, :selected => @telephone.country_code || Telephone.default_country_code %>
  </p>
  <p>
    <%= f.label :telephone %><br />
    <%= f.text_field :telephone %>
  </p>
  <p>
    <%= f.label :extension %><br />
    <%= f.text_field :extension %>
  </p>
  <p>
    <%= f.label :purpose %><br />
    <%= f.text_field :purpose %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>